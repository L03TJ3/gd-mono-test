{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es2015",
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true,
    "jsx": "react",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "types": ["jest", "node", "bn.js"],
    "typeRoots": ["./node_modules/@types", "./types", "./src/*", "../../node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types/",
    "paths": {"*": ["./src/*"]},
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["./src/**/*", "./src/**/*.d.ts", "./types"],
  "exclude": ["node_modules"]
}