{
  "include": [
    "src/**/*.ts",
    "./types/", 
    "src/**/*.json",
    "src/**/*.tsx",
    "src/*.d.ts",
    "src/**/*.d.ts",
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@gd-test-repo/sdk/core": ["./core"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "target": "es5",
    "lib": [
      "es2015",
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "skipLibCheck": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node", "bn.js"],
    "typeRoots": ["./node_modules/@types", "./types", "../../node_modules/@types"],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "react",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
  }
}